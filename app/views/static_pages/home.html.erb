
<main class="splash">
    <div class="content d-flex flex-column flex-md-row align-items-center p-2 px-md-4">
        <div class="mb-0 mb-md-5 mt-3 mt-md-1">
          <h1 class="h2 mt-0 mt-mb-1">
            <%= link_to "Teacher Data", '/', id: "logo", class: "text-white" %>
          </h1>
        </div>
        <div class="ml-md-auto d-flex flex-row pb-md-5">
            <%= render partial: "layouts/navbar_links" %>
        </div>
    </div>
 </main>

<% provide(:title, "Home") %>  

<div class="pricing-header px-3 py-3 pt-2 pt-md-2 pb-md-4 mx-auto text-center">
  <h1 class="display-4 mt-5">Free while in Beta for Teacher-Data</h1>
  <p class="lead">The best way to store and track data from your classroom. Created by a third-grade teacher for teachers. Quickly view and sort by student, classroom, grade level, or school district.</p>
</div>

<div class="card-deck mb-3 text-center  justify-content-center w-100">
      <% @plans.each do |plan| %>
        <div class="card mb-4 shadow-sm mx-auto card-width">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal"><%= plan.name %></h4>
          </div>
          <div class="card-body ">
            <h1 class="card-title pricing-card-title"><%= plan.symbol %> <%= plan.amount %> <small class="text-muted">/ <%= plan.frequency %></small></h1>
            <ul class="list-unstyled mt-3 mb-4">
                 <% features =  plan.features.split("\r\n") if plan.features.present? %>
                 <% if features.present? %>
                        <% features.each do |feature| %>
                            <li><%= feature %></li>
                        <% end %>
                  <% end %>       
            </ul>
            <%= link_to "Sign up", new_user_registration_path(plan: plan.name), class: "btn btn-lg btn-block btn-outline-primary" %>
          </div>
        </div>
      <% end %>
  
</div>
